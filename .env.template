# Azure OpenAI Configuration Setup
# Copy this file to .env and fill in your Azure OpenAI details

# Your Azure OpenAI endpoint (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com"

# Your Azure OpenAI API key
AZURE_OPENAI_KEY="your-api-key-here"

# Your Azure OpenAI deployment name (e.g., gpt-35-turbo, gpt-4, o4-mini)
AZURE_OPENAI_DEPLOYMENT="gpt-35-turbo"

# Optional: Default Log Analytics Workspace ID for testing
LOG_ANALYTICS_WORKSPACE_ID="your-workspace-guid-here"

# Optional: Development settings
DEBUG=false
LOG_LEVEL="INFO"
